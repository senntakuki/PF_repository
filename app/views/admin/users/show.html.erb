<div class="container">
 <h2 class="font-weight-bold" >会員詳細画面</h2>

  <div class="row d-flex">
   <div class="col-4">
    <h3>プロフィール</h3>
     <table class="table">
     <tbody>
       <tr>
       <%= image_tag @user.get_profile_image(100,100) %>
       </tr>
       <tr>
         <th>名前</th>
         <td><%= @user.name %></td>
       </tr>
       <tr>
         <th>紹介文</th>
         <td><%= @user.introduction %></td>
       </tr>
       <tr>
        <th>フォロー数</th>
        <td><%= @user.followings.count %></td>
       </tr>
       <tr>
        <th>フォロワー数</th>
        <td><%= @user.followers.count %></td>
       </tr>
     </tbody>
   </table>
  </div>

   <div class="col-8">
   <h2 class="font-weight-bold">投稿</h2>
   <table class="table">
     <thead>
       <tr class="text-center">
         <th class="col-1">名前</th>
         <th class="col-2">タイトル</th>
         <th class="col-3">内容</th>
         <th class="col-2">いいね❤️</th>
         <th class="col-2">コメント💬</th>
       </tr>
     </thead>
     <% @tweets.each do |tweet| %>
     <tbody>
       <tr>
         <td class="col-1"><%= link_to admin_user_path(tweet.user) do %>
           <%= image_tag tweet.user.get_profile_image(100,100) %>
           <% end %>
         </td>
         <td class="col-2"><%= link_to tweet.title,admin_tweet_path(tweet.id) %></td>
         <td class="col-3"><%= tweet.body %></td>
         <td class="col-1"><%= tweet.favorites.count %>件</td>
         <td class="col-1">コメント<%= tweet.post_comments.count %>件</td>
       </tr>
     </tbody>
     <% end %>
    </table>
    <div>
    <p><%#= link_to "退会する🚪", unsubscribe_path, class: "btn btn-danger" %></p>

    </div>
   </div>
  </div>
 </div>