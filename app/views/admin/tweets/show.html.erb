<div class="container">
 <h2>投稿詳細</h2>

   <table class="table">
     <thead>
       <tr>
         <th class="col-1">投稿日</th>
         <th class="col-1">名前</th>
         <th class="col-2">タイトル</th>
         <th class="col-3">内容</th>
         <th class="col-1">いいね❤️</th>
         <th class="col-1">コメント💬</th>
       </tr>
     </thead>
       <tr>
         <td><%= @tweet.created_at.strftime("%m-%d %H:%M") %></td>
         <td><%= link_to admin_user_path(@tweet.user.id) do %>
             <%= image_tag @tweet.user.get_profile_image(50,50) %><br>
             <%= @tweet.user.name %>
             <% end %>
         </td>
         <td><%= link_to @tweet.title, @tweet %></td>
         <td><%= @tweet.body %></td>
         <td><%= tweet.favorites.count %>件</td>
         <td>コメント<%= @post_comments.count %>件</td>
       </tr>
    </table>
     <div>
          <% if @tweet.user == admin %>
           <%= link_to "投稿削除", admin_tweet_path(@tweet.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
          <% end %>
     </div>