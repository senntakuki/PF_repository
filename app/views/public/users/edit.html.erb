<div class="container">
 <h2>プロフィール編集画面</h2>

  <%= form_with model: @user do |f| %>
   <div class = "form-group">
    <label>名前</label>
      <%= f.text_field :name, autofocus: true, id:"user_Name" %>
   </div>
   <div class = "form-group">
     <label>プロフィール画像</label>
       <%= f.text_field :profile_image, accept: "image/*" %>
   </div>
   <div class = "form-group">
     <label>紹介文</label>
      <%= f.text_field :introduction, %>
   </div>
   <%= f.submit "情報更新", class:"btn btn-secondary" %>
   <% end %>
</div>