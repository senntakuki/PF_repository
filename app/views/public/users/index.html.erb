<div class="container">
<h2>会員一覧</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-2">会員画像</th>
      <th class="col-2">名前</th>
      <th class="text-center">紹介文</th>
      <th>フォロワー数</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <% if user.is_deleted == false %> <!--is_deletedがfalseなので退会していないことになる-->
        <%= image_tag user.get_profile_image(100,100) %>
        <td><%= link_to user.name, user_path(user.id) %></td>
        <% else %><!--elseでis_deleted == trueの場合、つまり退会した場合の表示にする*退会済みユーザー-->
         <td>退会済み会員</td>
        <% end %>
      </td>
      <td><%= user.introduction %></td>
      <td><%= user.followers.count %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>