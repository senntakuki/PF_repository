<div class="container">
 <h2>投稿一覧</h2>

 <table class="table">
   <thead>
     <tr>
       <th>タイトル</th>
       <th>内容</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
     <% @tweets.each do |tweet| %>
     <tr>
       <td><%= link_to user_path(tweet.user.id) do %>
       <%= image_tag tweet.user.get_profile_image(100,100) %>
       </td>
       <% end %>
       <td>
         <%= link_to tweet_path(tweet.id) %>
         <%= tweet.title %>
      </td>
      <td><%= tweet.body %></td>
      <% end %>
     </tr>
   </tbody>

 </table>




 </div>

