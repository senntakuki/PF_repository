<div class="container">
  <h2>新規投稿</h2>
   <div class="row col-4">
    <%= form_with model: @tweet do |f| %>
   <h4>タイトル</h4>
     <%= f.text_field :title, autofocus: true, autocomplete: "タイトル" %>
   <h4>内容</h4>
     <%= f.text_area :body, autofocus: true, autocomplete: "投稿内容" %>

     <%= f.submit '投稿' %>
    <% end %>
 </div>
</div>