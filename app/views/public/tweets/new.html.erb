<div class="container text-center">
  <h2>新規投稿</h2>

    <%= form_with model: @tweet do |f| %>
   <h4>タイトル</h4>
     <%= f.text_field :title, autofocus: true, autocomplete: "タイトル" %>
   <h4>内容</h4>
     <%= f.text_area :body, autofocus: true, :size=>"60",autocomplete: "投稿内容" %><br>

     <%= f.submit "投稿する" %>
    <% end %>

</div>