<div class="container">
  <h3>フォロー一覧</h3>
      <table class="table">
        <thead>
          <tr>
            <th>名前</th>
            <th></th>
          </tr>
         </thead>
         <tbody>
          <% if @users.exists? %>
          <% @users.each do |user| %>
          <tr>
            <td clas="col-1"><%= link_to user_path(user.id) do %>
              <%= image_tag user.get_profile_image(50,50) %>
              <%= user.name %>
              <% end %>
              </td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
          </tr>
         </tbody>
       </table>
    <% end %>
    <% else %>
      <p>ユーザーはいません</p>
  <% end %>
</div>